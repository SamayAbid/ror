<%= form_with model: @book , :remote => true do |form| %>
	
	<div class="container p-5">

	<div class="form-group">
		
		<%= form.text_field :name , class:"form-control", placeholder: "Name"%>
		<% @book.errors.full_messages_for(:name).each do |message|%>
			<div>
				<%=message%>
			</div>
		<%end%>	
	</div>

	<div class="form-group">
		<br>
		<%= form.text_area :description, class:"form-control",placeholder: "Description"%>
		<% @book.errors.full_messages_for(:description).each do |message|%>
			<div>
				<%= message %>
			</div>
		<%end%>	
	</div>



	<br>
	<br>
	<div>
		<%= form.submit class:"btn btn-dark" %><br><br>
	</div>

	</div>

<%end%>	
<h1>Books Index</h1>

<br>

<%= render "form", book: @book%>

<div class="container">


<table class="table table-striped table-borderless table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr> 
  </thead>

  <tbody>

    <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.description %></td>
      <td><%= link_to "Delete", book_path(book.id),class: "btn btn-outline-dark", remote: true , method: :delete%></td>
    </tr>
    <% end %>     
  
  </tbody>
</table>
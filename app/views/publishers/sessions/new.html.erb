<%= render 'home/header' %>

<div class="container">
<br>  
<h2>Log in</h2>
<div class="container p-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <%= render "publishers/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.email_field :email,class: "form-control", autocomplete: "email" , placeholder:"E-mail" %>
  </div>

  <div class="field form-group">
    <br>
    <%= f.password_field :password,class: "form-control", autocomplete: "current-password",placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <br>
  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-dark" %>
    <%= link_to "Sign Up" , 
    <%= render "publishers/shared/links" %>
  </div>
<% end %>


</div>

</div>
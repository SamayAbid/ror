
<%= render "home/header" %>
<div class="container">
  <br>
<h2>Forgot your password?</h2>

<div class="container p-4">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "publishers/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.email_field :email,class: "form-control", autocomplete: "email",placeholder:"E-mail" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-dark" %>
  </div>
<% end %>
<br>
<%= link_to "Login", new_publisher_session_path, class: "btn btn-dark"%>

</div>
</div>
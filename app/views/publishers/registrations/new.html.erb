<%= render "home/header" %>
<div class="container">
<br>
<h2>Sign up</h2>
<div class= "container p-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publishers/shared/error_messages", resource: resource %>

  <div class="field form-group">
    
    <%= f.email_field :email,class: "form-control" ,autocomplete: "email", placeholder:"E-mail" %>
    <br>
  </div>

  <div class="field form-group">
    
    <%= f.password_field :password,class: "form-control", autocomplete: "new-password", placeholder: "Password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="field form-group">
    <br>
    <%= f.password_field :password_confirmation,class: "form-control", autocomplete: "new-password", placeholder: "Confirm Password" %><br>
  </div>

  <div class="field form-group">
    <br>
    <%= f.telephone_field :phone_no ,class: "form-control", placeholder: "Phone No" %><br>
  </div>

  <div class="field form-group">
    <br>
    <%= f.text_field  :address ,class: "form-control",  placeholder: "Address" %><br>
  </div>


  <div class="field form-group">
    <br>
    <%= f.file_field :avatar , class: "form-control", placeholder: "Upload Image" %><br>
  </div>  


  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-dark" %>
    <%= render "publishers/shared/links"%>
  </div>
<% end %>

</div>
</div>
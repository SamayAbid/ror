<%= render 'home/header' %>


<br> <br>

<div class="container">


<table class="table table-striped table-borderless table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Created</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr> 
  </thead>

  <tbody>

    <% @articles.each do |article| %>
    <tr>
      
      
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= article_date(article) %></td>
      <td><%= article.publisher_id %></td>
      <td><%= link_to "Show", article_path(article), class: "btn btn-outline-dark"%></td>
      <td><%= link_to "Edit", edit_article_path(article),class: "btn btn-outline-dark"%></td>
      <td><%= link_to "Delete", article_path(article.id),class: "btn btn-outline-dark", method: :delete,data:{confirm: "Are You Sure?"}%></td>
      

      
    </tr>
    <% end %>     
  
  </tbody>
</table>

<br>
<%= link_to "Add Article" , new_article_path , class: "btn btn-dark" %>

</div>


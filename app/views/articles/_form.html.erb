<%= form_with model: @article do |form| %>
	
	<div class="container p-5">

	<div class="form-group">
		
		<%= form.text_field :title , class:"form-control", placeholder: "Title"%>
		<% @article.errors.full_messages_for(:title).each do |message|%>
			<div>
				<%=message%>
			</div>
		<%end%>	
	</div>

	<div class="form-group">
		<br>
		<%= form.text_area :description, class:"form-control",placeholder: "Description"%>
		<% @article.errors.full_messages_for(:description).each do |message|%>
			<div>
				<%= message %>
			</div>
		<%end%>	
	</div>
	<br>
	<div class="form-group">
		<%= form.number_field :publisher_id,id: :article_publisher_id,value: current_publisher.id, class: "form-control", type: :hidden%>
	</div>

	<br><br>
	<div>
		<%= form.submit class:"btn btn-dark" %><br><br>
		<%= link_to "back" , articles_path , class: "btn btn-dark" %>
	</div>

	</div>

<%end%>	